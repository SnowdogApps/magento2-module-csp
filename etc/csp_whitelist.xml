<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="data" type="host">data:</value>
                <value id="maps" type="host">maps.googleapis.com</value>
                <value id="maps-gstatic" type="host">maps.gstatic.com</value>
                <value id="facebook" type="host">www.facebook.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="data" type="host">data:</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="maps" type="host">maps.googleapis.com</value>
                <value id="maps-gstatic" type="host">maps.gstatic.com</value>
                <value id="facebook-connect" type="host">connect.facebook.net</value>
                <value id="vimeo" type="host">f.vimeocdn.com</value>
                <value id="google" type="host">www.google.com</value>
                <value id="gstatic" type="host">www.gstatic.com</value>
                <value id="cardinal_commerce_includes" type="host">includes.ccdc02.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="paypal" type="host">*.paypal.com</value>
                <value id="authorize-net" type="host">*.authorize.net</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="style-googleapis" type="host">*.googleapis.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
